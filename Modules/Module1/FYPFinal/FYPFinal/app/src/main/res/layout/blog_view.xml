<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:id="@+id/cv1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            app:srcCompat="@drawable/common_full_open_on_phone" />

        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingBottom="15dp"
            android:text="Post Title"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/post_Text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoText="false"
            android:paddingBottom="40dp"
            android:text="The Post Descirption"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/loc"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="LocationAndDate"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/views"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="views:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                app:srcCompat="@drawable/thumbs1" />

            <ImageButton
                android:id="@+id/dislike"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginLeft="250dp"
                android:layout_weight="0.00"
                android:transformPivotX="12dp"
                app:srcCompat="@drawable/thumbsdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0" />

            <TextView
                android:id="@+id/totalDislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_weight="1"
                android:text="0" />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>